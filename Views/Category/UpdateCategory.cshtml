@model Category
<div class="text-left">
    <h5>แก้ไขประเภทสินค้า</h5>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="UpdateCategory" asp-controller="Category">
            <div class="form-group">
                <input type="hidden"asp-for="CategoryId">
                <label asp-for="CategoryName">ชื่อประเภทสินค้า</label>
                <input type="text" class="form-control" asp-for="CategoryName" placeholder="กรุณาระบุชื่อประเภทสินค้า">
                <span class="text-danger" asp-validation-for="CategoryName"></span>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" asp-for="IsActive" name="IsActive" value="True">
                    <label class="custom-control-label" asp-for="IsActive">Active?</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">ยืนยัน</button>
        </form>
    </div>
</div>
<partial name="_ValidationScriptsPartial" />